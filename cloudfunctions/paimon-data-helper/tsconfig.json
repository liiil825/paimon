{
  "compilerOptions": {
    "strictNullChecks": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "lib": ["ES2018"],
    "allowJs": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}